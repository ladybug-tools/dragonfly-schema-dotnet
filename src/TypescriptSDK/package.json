{
  "name": "dragonfly-schema",
  "license": "MIT",
  "version": "1.1301.0",
  "description": "Dragonfly Schema's typescript version",
  "author": "Ladybug Tools",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "build:tsc": "npm run clean && tsc --build",
    "build:dts": "tsc --emitDeclarationOnly",
    "build:tsup:browser": "tsup src/index.ts --out-dir ./dist --sourcemap --dts --format=esm",
    "build:tsup:node": "tsup src/index.ts  --out-dir ./dist --sourcemap --dts --format=cjs",
    "build:tsup": "npm run build:tsup:browser && npm run build:tsup:node",
    "build": "npm run clean && npm run check && npm run build:tsup",
    "custom-pack": "npm run build && npm pack",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "dts-bundle-generator": "^9.5.1",
    "gts": "^5.3.1",
    "tsup": "^8.3.6",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "honeybee-schema": "latest"
  }
}
